{
  "name": "task-force-mailer",
  "version": "1.5.4",
  "description": "TASK FORCE â€“ Mass mailer with Google Sheets integration",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && concurrently \"npm run watch\" \"npm run electron\"",
    "dev-simple": "npm run build && electron .",
    "watch": "webpack --config webpack.config.js --watch",
    "electron": "wait-on dist/bundle.js && electron .",
    "build": "webpack --config webpack.config.js",
    "gen-icons": "node ./scripts/generate-icons.js",
    "build-win": "npm run build && npm run gen-icons && electron-builder --win nsis && powershell -NoProfile -Command \"New-Item -ItemType Directory -Force -Path dist-builds/zip | Out-Null; Get-ChildItem dist-builds -Filter *.exe | ForEach-Object { Compress-Archive -Path $_.FullName -DestinationPath ('dist-builds/zip/' + $_.BaseName + '.zip') -Force }\"",
    "build-mac": "npm run build && npm run gen-icons && electron-builder --mac dmg zip",
    "build-linux": "npm run build && npm run gen-icons && electron-builder --linux",
    "build-all": "npm run build && npm run gen-icons && electron-builder -mwl",
    "dist": "npm run build && npm run gen-icons && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "email",
    "marketing",
    "automation",
    "google-sheets",
    "gmail",
    "desktop-app"
  ],
  "author": "RTX Innovations",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.5.3",
    "icon-gen": "^3.0.1",
    "sharp": "^0.33.2",
    "style-loader": "^3.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "imapflow": "^1.0.164",
    "googleapis": "^128.0.0",
    "mime-types": "^3.0.1",
    "nodemailer": "^6.9.14",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.rtxinnovations.taskforce",
    "productName": "TASK FORCE",
    "directories": {
      "output": "dist-builds"
    },
    "asar": true,
    "files": [
      "dist/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "src/main.js"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Raylyrix",
        "repo": "RTXAPPS"
      }
    ],

    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "artifactName": "TASK-FORCE-Setup-${version}.${ext}",
      "icon": "assets/icons/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "executableName": "TaskForceMailer"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.business",
      "identity": null,
      "artifactName": "TASK-FORCE-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icons/icon.png",
      "artifactName": "TASK-FORCE-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TASK FORCE",
      "runAfterFinish": false,
      "artifactName": "TASK-FORCE-Setup-${version}.${ext}",
      "allowElevation": true,
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "deleteAppDataOnUninstall": false
    }
  }
}
