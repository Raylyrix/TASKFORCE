{
  "name": "taskforce-mailer",
  "version": "5.0.5",
  "description": "Professional email analytics platform with AI-powered insights and seamless desktop integration",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:backend": "pnpm --filter @taskforce/backend dev",
    "dev:frontend": "pnpm --filter @taskforce/frontend dev",
    "dev:worker": "pnpm --filter @taskforce/worker dev",
    "dev:ai": "pnpm --filter @taskforce/ai-service dev",
    "test": "pnpm -r test",
    "test:ci": "pnpm -r test -- --ci --coverage --watchAll=false",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint --fix",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "setup": "pnpm install && pnpm build",
    "setup:dev": "pnpm install && cp env.example .env",
    "start:production": "PowerShell -ExecutionPolicy Bypass -File scripts/start-production.ps1",
    "test:production": "PowerShell -ExecutionPolicy Bypass -File scripts/test-production-system.ps1",
    "deploy": "pnpm build && pnpm start:production",
    "db:push": "cd apps/backend && npx prisma db push",
    "db:migrate": "cd apps/backend && npx prisma migrate dev",
    "db:generate": "cd apps/backend && npx prisma generate",
    "db:studio": "cd apps/backend && npx prisma studio",
    "electron:build": "cd rtx_innovations_electron && npm run build",
    "electron:dev": "cd rtx_innovations_electron && npm run dev",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^38.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "email",
    "analytics",
    "ai",
    "automation",
    "productivity",
    "gmail",
    "oauth",
    "dashboard",
    "electron",
    "nextjs",
    "fastify"
  ],
  "author": "Taskforce Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Raylyrix/TASKFORCE.git"
  },
  "bugs": {
    "url": "https://github.com/Raylyrix/TASKFORCE/issues"
  },
  "homepage": "https://github.com/Raylyrix/TASKFORCE#readme",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "bullmq": "^4.18.3",
    "crypto-js": "^4.2.0",
    "ioredis": "^5.7.0",
    "nodemailer": "^6.10.1"
  }
}
